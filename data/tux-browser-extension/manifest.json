{
  "manifest_version": 2,
  "name": "Tux Assistant Connector",
  "version": "1.0.0",
  "description": "Connects Firefox to Tux Assistant for one-click theme and extension installation",
  "author": "Christopher Dorrell",
  "homepage_url": "https://github.com/kcdorrell/Tux-Assistant",
  
  "permissions": [
    "nativeMessaging",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],
  
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  
  "browser_specific_settings": {
    "gecko": {
      "id": "tux-connector@tuxassistant.com",
      "strict_min_version": "91.0"
    }
  },
  
  "icons": {
    "48": "icon.svg",
    "96": "icon.svg"
  }
}
